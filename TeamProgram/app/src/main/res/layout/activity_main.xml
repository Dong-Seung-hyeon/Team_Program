<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/dark"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView1"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:textColor="@color/white"
        android:text="왕초보를 위해 만든 알기쉬운 PC 견적"
        android:textSize="20dp" />
    <TextView
        android:id="@+id/textView2"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:text="NCC PC 견적" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:layout_marginTop="100dp"
        android:textAlignment="center"
        android:text="용도에 맞춰서 선택하자!" />
    
    <Button
        android:id="@+id/btn1"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:text="용도별 견적 구성 시작하기             →"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:text="가격대만 선택하면 뚝딱!" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:text="왕초보 AI견적 시작하기                 →"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:text="내 PC는 직접 만들어보자" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:text="셀프 견적 구성 시작하기                →"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:text="부품에 대해 알아보자!!" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:text="왕초보를 위한 부품 설명 보러가기   →"
        android:textSize="20dp"/>

</LinearLayout>